types = {
	type[idea_category] = {
		path = "game/common/idea_tags"
		skip_root_key = idea_categories
		subtype[slot] = {
			## cardinality = 1..inf
			slot = scalar
		}
		## only_if_not = { slot }
		subtype[no_slot] = {

		}
	}
}

idea_category = {
	### Whether the ideas are shown anywhere. Default: yes
	## cardinality = 0..1
	hidden = bool

	subtype[no_slot] = {
		## cardinality = 0..1
		national_spirit = bool
	}

	## cardinality = 0..1
	cost = int

	## cardinality = 0..1
	removal_cost = int

	## cardinality = 0..1
	# enum[ledgers] defined in ideas.cwt
	ledger = enum[ledgers]

	subtype[slot] = {
		## cardinality = 1..inf
		slot = value_set[idea_slot]
	}

	## cardinality = 0..inf
	character_slot = enum[character_slot_types]

	## cardinality = 0..1
	type = enum[idea_tag_type]

	## cardinality = 0..1
	politics_tab = bool
}

enums = {
	enum[idea_tag_type] = {
		air_spirit
		navy_spirit
		army_spirit
		national_spirit
	}
	enum[character_slot_types] = {
		army_chief
		navy_chief
		air_chief
		high_command
	}
}